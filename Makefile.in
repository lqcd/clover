# makefile template

LIMPDIR = @limpdir@
BINDIR  = @bindir@
INCDIR  = @incdir@
LIBDIR  = @libdir@
DOCDIR  = @docdir@
V=0

ifeq ("$V", "0")
   E=@echo "  "
   C=@
else
   E=@echo > /dev/null
   C=
endif

docs=AUTHORS COPYRIGHT README config.log doc/clover.pdf

.PHONY: all clean install

all:
	$(MAKE) V=$V -C $(LIMPDIR) CONFIG=../target all

clean:
	$(MAKE) V=$V -C $(LIMPDIR) CONFIG=../target clean

install: all clover-config
	$E INSTALLING to $(DESTDIR)`dirname $(LIBDIR)`
	$C [ -d $(DESTDIR)$(BINDIR) ] || mkdir -p $(DESTDIR)$(BINDIR)
	$C cp  clover-config $(DESTDIR)$(BINDIR)/
	$C [ -d $(DESTDIR)$(LIBDIR) ] || mkdir -p $(DESTDIR)$(LIBDIR)
	$C cp $(LIMPDIR)/libqop-clover.a $(DESTDIR)$(LIBDIR)/
	$C [ -d $(DESTDIR)$(INCDIR) ] || mkdir -p $(DESTDIR)$(INCDIR)
	$C cp $(LIMPDIR)/qop-clover.h $(DESTDIR)$(INCDIR)/
	$C [ -d $(DESTDIR)$(DOCDIR) ] || mkdir -p $(DESTDIR)$(DOCDIR)
	$C for f in $(docs) ; do \
	  cp $$f $(DESTDIR)$(DOCDIR)/`basename $$f`; \
	done
	$E ALL DONE
